<div dir="rtl" class="product-item grid-item product-tile-container wishlist-tile-container medium--one-quarter small--one-half large--one-quarter grid-item {{ product.handle }}" data-product-id="{{ product.id }}" data-product-handle="{{ product.handle }}" style="float:right">
  <div class="product-tile wishlist-tile">
    <div class="product-tile--tile-media">
      <a class="tile-media--media-link product-grid-item text-center" href="{{ product.url }}">
        <div class="media-link--image product-grid-image">
          <img class="image--main" src="{{ product.featured_image | product_img_url: 'grande' }}" alt="{{ product.title }}">
        </div>
      </a>
    </div>
    <div class="product-tile--tile-content flex">
      <div align="center" class="tile-content--text">
        <p align="center" class="text--title black">{{ product.title }}</p>
        {% if product.compare_at_price > product.price %}
          <p align="center" class="text--price">
            <span class="price--compare strike-through">{{ product.compare_at_price | money }}</span> <span class="price--sale">{{ product.price | money }}</span>
          </p>
        {% else %}  
          <p align="center" class="text--price">{{ product.price | money }}</p>
        {% endif %}
      <a class="action--quick-cart tile-actions--btn flex cart-btn" href="/cart/add?id={{ product.selected_or_first_available_variant.id }}&quantity=1" data-handle='{{ product.handle }}' data-product-id='{{ product.handle }}' onclick="addTocarturl('{{ product.handle }}')">הוסף לעגלה</a>

      </div>
     
<a class="action--wishlist tile-actions--btn flex wishlist-btn chk--whislist-btn is-active" data-product-handle="product-1">
        הסר
      </a>
      <input type="hidden" id="{{ product.handle }}" value="{{ product.selected_or_first_available_variant.id }}" />
    </div>
  </div>  
</div>
